<Window x:Class="PhoneClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="600" Closed="Window_Closed" MinWidth="600" MinHeight="850">
    <Grid>
        <Image x:Name ="ImageContainer" Margin="100,88,0,0" Height="720" Width="400" MouseLeftButtonDown="ImageContainer_MouseLeftButtonDown" MouseLeftButtonUp="ImageContainer_MouseLeftButtonUp" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Button x:Name="btnStart" Content="Start" Width="100" Height="36" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="btnStart_Click" />
        <Button x:Name="btnConnect" Content="Connect"  Width="100" Height="36" HorizontalAlignment="Left" Margin="139,10,0,0" VerticalAlignment="Top" Click="btnConnect_Click" />
        <Button x:Name="btnStop" Content="Stop"  Width="100" Height="36" HorizontalAlignment="Left" Margin="275,10,0,0" VerticalAlignment="Top" Click="btnStop_Click" />
        <Button x:Name="btnUpdateFile" Content="Apk" HorizontalAlignment="Left" Margin="413,10,0,0" VerticalAlignment="Top" Width="130" Height="36" Click="btnUpdateFile_Click"/>
    </Grid>
</Window>
